Actor QCSuperShotgun : QCWeapon
{
	Height 48
	Weapon.SwaySpeed 3.0
	Weapon.Kickback 35
	Weapon.SelectionOrder 1100
	Weapon.AmmoUse 2
	Weapon.AmmoGive 16
	Weapon.AmmoType "QCShellAmmo"
	Obituary "$OB_QCSuperShotgun" // "%o was too close to %k's double barreled shotgun."
	Inventory.PickupMessage "$GOT_QCSuperShotgun" // "Picked up a Super Shotgun."
	Tag "$TAG_QCSuperShotgun" // "Super Shotgun"
	Scale 0.66
	States
	{
	Spawn:
		QCGC Y 35 NoDelay A_JumpIf(ACS_NamedExecuteWithResult("MultiplayerCheck",0,0,0,0) == 2,"DMSpawn")
		Goto Idle
	DMSpawn:
		QCGC ZZZZZZZZZZZZZZZ 35 Bright
		Stop
	Idle:
		QCGC Y -1
		Wait
	//-----------------------
	// Ready Seq
	//-----------------------
	Ready:
		QCGC A 0 A_JumpIfInventory("NoWeaponFireToken",1,"ReadyCantFire")
		QCGC A 3 A_WeaponReady
		Loop
		
		ReadyCantFire:
			QCGC A 0 A_StopSound(5)
			QCGC A 0 A_StopSound(6)
			QCGC A 0 A_StopSound(CHAN_WEAPON)
			"####" "#" 0 A_ZoomFactor(1.0)
			"####" "#" 0 A_TakeInventory("WeaponZoomedToken",32767)
		RCFLooper:
			QCGC A 4 A_WeaponReady(WRF_NOFIRE)
			QCGC A 0 A_JumpIfInventory("NoWeaponFireToken",1,"RCFLooper")
			Goto Ready
	//-----------------------
	// Select/Deselect Seq
	//-----------------------
	Select:
		QCGC A 0 A_JumpIfInventory("NoWeaponFireToken",1,2)
		QCGC A 0 A_PlaySound("QC/Weapons/Switch",6,1,0,3) //Not in Weapon.UpSound because it interrupts CHAN_WEAPON sounds
		QCGC A 0 A_TakeInventory("QCShotgunDM")
		"####" "#" 0 A_StopSound(5) //stops any weapon looping sound
		"####" "#" 0 A_ZoomFactor(1.0)
		"####" "#" 0 A_TakeInventory("WeaponZoomedToken",32767)
	SelectLooper:
		QCGC A 1 A_Raise
		"####" "###" 0 A_Raise
		Loop
	
	Deselect:
		"####" "#" 0 A_ZoomFactor(1.0)
		"####" "#" 0 A_TakeInventory("WeaponZoomedToken",32767)
	DeselecLooper:
		QCGC A 1 A_Lower
		"####" "###" 0 A_Lower
		Loop
		
	//-----------------------
	// Fire Seq
	//-----------------------
	Fire: //35 tics, 1.0 sec
		QCGC A 0 A_JumpIfInventory("NoWeaponFireToken",1,"ReadyCantFire")
		TNT1 A 0 A_AlertMonsters
		QCGC B 0 Bright A_GunFlash("PrimaryFlash")
		"####" B 1 Bright
		"####" B 1 Bright Offset(5,28) 
		"####" B 0 A_JumpIfInventory("SSG_UG_Speed",1,"FasterSpeed")
	RegularSpeed:
		"####" C 1 Offset(12,20) 
		"####" D 1 Offset(24,12) 
		"####" E 1 Offset(33,10) 
		"####" F 1 Offset(39,8) 
		"####" G 1 Offset(45,8) 
		"####" G 1
		"####" H 1
		"####" I 1
		"####" J 2
		"####" K 2
		"####" L 1
		"####" L 1 Offset(43,8)
		"####" M 1 Offset(40,9) 
		"####" M 1 Offset(37,10)
		"####" N 1 Offset(34,12)
		"####" O 1 Offset(31,15)
		"####" P 1 Offset(27,18)

		"####" Q 1 Offset(24,21)
		"####" Q 1 Offset(21,24)
		"####" R 1 Offset(19,28)
		"####" R 1 Offset(17,29)
		"####" S 1 Offset(15,30)
		"####" S 1 Offset(13,32)
		"####" T 1 Offset(11,33)
		"####" T 1 Offset(9,34)
		"####" U 1 Offset(7,35)
		"####" U 1 Offset(5,36)
		"####" A 1 Offset(4,36)
		"####" A 1 Offset(3,35)
		"####" A 1 Offset(2,34)
		"####" A 1 Offset(1,33)	 
		Goto Ready
		
		
	FasterSpeed: //including 2 tics of firing, total 28 tics (0.8sec)
		"####" C 1 Offset(12,20) 
		"####" D 1 Offset(24,12) 
		"####" E 1 Offset(33,10) 
		"####" F 1 Offset(39,8) 
		"####" G 1 Offset(45,8) 
		"####" H 1
		"####" I 1
		"####" J 1
		"####" K 1
		"####" L 1 Offset(43,8)
		"####" M 1 Offset(38,10)
		"####" N 1 Offset(34,12)
		"####" O 1 Offset(31,15)
		"####" P 1 Offset(27,18)
		"####" Q 1 Offset(24,21)
		"####" Q 1 Offset(21,24)
		"####" R 1 Offset(18,28)
		"####" S 1 Offset(15,30)
		"####" S 1 Offset(13,32)
		"####" T 1 Offset(11,33)
		"####" T 1 Offset(8,34)
		"####" U 1 Offset(5,36)
